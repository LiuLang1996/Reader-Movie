<view>
  <!-- 轮播图 -->
  <swiper autoplay='{{autoplay}}' interval='{{interval}}' circular='{{circular}}' indicator-dots='{{indicatorDots}}'>
    <block wx:for="{{imgUrls}}" wx:key="imgs">
      <swiper-item>
        <image src='{{item}}'></image>
      </swiper-item>
    </block>
  </swiper>

  <!-- 文章列表 -->
  <block wx:for="{{postLists}}" wx:key="post">
    <!-- 作者和发表日期 -->
    <view class='article'>
      <view class='post-author-dete'>
        <image src='{{item.avatar}}' class='avatar'></image>
        <text>{{item.date}}</text>
      </view>
      <!-- 文章标题 -->
      <text class='post-title'>{{item.title}}</text>
      <!-- 文章图片 -->
      <image class='post-image' src='{{item.imgSrc}}'></image>
      <!-- 文章简介 -->
      <text class='.post-content'>{{item.content}}</text>
      <!-- 文章查看人数和关注人数 -->
      <view class='post-like'>
        <image src='/images/icon/chat.png' class='post-like-image'></image>
        <text class='post-like-font'>{{item.collection}}</text>
        <image src='/images/icon/view.png' class='post-like-image'></image>
        <text class='post-like-font'>{{item.reading}}</text>
      </view>
    </view>
  </block>
</view>