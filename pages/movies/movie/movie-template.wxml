<import src="../stars/stars-template.wxml" />
<template name="movie">
  <view class="movie-container" bindtap="toMovieDetail" data-movieId="{{movieId}}">
    <image src="{{coverageUrl}}" class="movie-img"></image>
    <text class="movie-title">{{title}}</text>
    <template is="stars" data="{{average: average, stars: stars}}" />
  </view>
</template>